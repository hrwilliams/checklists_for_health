<h1>New message</h1>

<% if @message.errors.any? %>
  <p> Something went wrong:</p>
  <ul>
    <% @message.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>




  <%= form_for [@week, @message] do |f| %>
    <div class="form-group">
      <%= f.label :to %>:
       <%= f.text_field :to %>
       <%= f.label :body %>:
       <%= f.text_field :body %>
     <%= f.submit %>
   <% end %>
